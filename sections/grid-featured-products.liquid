<!-- Featured Products Grid Section -->
<div class="featured-products-grid">
  <div class="grid">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}
        <div class="grid-item">
          <a href="javascript:void(0);" class="product-link" data-handle="{{ product.handle }}" data-id="{{ product.id }}">
            <img src="{{ product | img_url: 'medium' }}" alt="{{ product.title }}">
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<!-- Product Popup Modal -->
<div id="product-modal" class="product-modal">
  <div class="modal-content">
    <span class="close-button">&times;</span>
    <div class="modal-body">
      <div class="product-info">
        <div class="lhs">

        </div>
        <div class="rhs">

        </div>
      </div>
    </div>
  </div>
</div>

<!-- Section Settings Schema -->
{% schema %}
{
  "name": "Featured Products Grid",
  "settings": [],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Featured Products Grid",
      "category": "Products"
    }
  ]
}
{% endschema %}

<!-- Styles for the Featured Products Grid -->
<style>
.featured-products-grid .grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
}

.featured-products-grid .grid-item {
  flex: 1 1 calc(33.333% - 20px);
  box-sizing: border-box;
}

.featured-products-grid .grid-item img {
  width: 100%;
  height: auto;
}

.product-modal {
  display: none;
  position: fixed;
  z-index: 9999;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgba(0,0,0,0.8);
}

.product-modal .modal-content {
  background-color: #fff;
  margin: 5% auto;
  padding: 20px;
  width: 80%;
  max-width: 800px;
  position: relative;
}

.product-modal .close-button {
  position: absolute;
  right: 15px;
  top: 10px;
  font-size: 30px;
  font-weight: bold;
  cursor: pointer;
}
</style>

<!-- Scripts for the Featured Products Grid -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  var modal = document.getElementById('product-modal');
  var modalContent = modal.querySelector('.modal-body');
  var closeButton = modal.querySelector('.close-button');
  var productLinks = document.querySelectorAll('.featured-products-grid .product-link');

  productLinks.forEach(function(link) {
    link.addEventListener('click', function(event) {
      event.preventDefault();
      var handle = this.getAttribute('data-handle');

      fetch('/products/' + handle + '?view=modal')
        .then(function(response) {
          return response.text();
        })
        .then(function(html) {
          modalContent.innerHTML = html;
          modal.style.display = 'block';
        });
    });
  });

  closeButton.addEventListener('click', function() {
    modal.style.display = 'none';
    modalContent.innerHTML = '';
  });

  window.addEventListener('click', function(event) {
    if (event.target == modal) {
      modal.style.display = 'none';
      modalContent.innerHTML = '';
    }
  });
});
</script>