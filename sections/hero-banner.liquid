<!-- Hero Banner Section -->
<div class="hero-banner">
  <!-- Header -->
  <div class="hero-banner__header">
    <div class="header-logo">
      {% if section.settings.header_logo != blank %}
        <img src="{{ section.settings.header_logo | img_url: 'medium' }}" alt="Logo" class="hero-banner__logo">
      {% endif %}
    </div>
    <div class="hero-banner__header-text">
      <h1>{{ section.settings.header_text }}</h1>
    </div>
    <div class="header-cta">
      {% if section.settings.header_button_text != blank and section.settings.header_button_link != blank %}
        <a href="{{ section.settings.header_button_link }}" class="hero-banner__header-button">
          {{ section.settings.header_button_text }}
          <img src="{{ 'right-arrow-black.svg' | asset_img_url }}" />
        </a>
      {% endif %}
    </div>
  </div>

  <!-- Content Area -->
  <div class="content-area">
    <div class="hero-banner__bg">&nbsp;</div>
    <div class="hero-banner__bg-wrapper">
      <div class="hero-banner__content">
        <h2>{{ section.settings.content_title }}</h2>
        <p>{{ section.settings.content_description }}</p>
        {% if section.settings.content_button_text != blank and section.settings.content_button_link != blank %}
          <a href="{{ section.settings.content_button_link }}" class="hero-banner__content-button">
            {{ section.settings.content_button_text }}
            <img src="{{ 'right-arrow.svg' | asset_img_url }}" />
          </a>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Footer -->
  <div class="hero-banner__footer">
    <p>{{ section.settings.footer_text }}</p>
  </div>
</div>

<!-- Section Settings Schema -->
{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "header_logo",
      "label": "Header Logo"
    },
    {
      "type": "text",
      "id": "header_text",
      "label": "Header Middle Text",
      "default": "Welcome to Our Store"
    },
    {
      "type": "url",
      "id": "header_button_link",
      "label": "Header Button Link"
    },
    {
      "type": "text",
      "id": "header_button_text",
      "label": "Header Button Text",
      "default": "Shop Now"
    },
    {
      "type": "text",
      "id": "content_title",
      "label": "Content Title",
      "default": "Our Products"
    },
    {
      "type": "textarea",
      "id": "content_description",
      "label": "Content Description",
      "default": "Check out our range of products."
    },
    {
      "type": "url",
      "id": "content_button_link",
      "label": "Content Button Link"
    },
    {
      "type": "text",
      "id": "content_button_text",
      "label": "Content Button Text",
      "default": "Learn More"
    },
    {
      "type": "textarea",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "Thank you for visiting our store."
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<!-- Styles for the Hero Banner -->
<style>
  .hero-banner__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #f5f5f5;
    padding: 10px 50px;
  }
  .hero-banner__header-text * {
    font-size: 16px;
  }
  .header-logo img {
    vertical-align: middle;
  }
  .header-cta a {
    background: #fff544;
    text-decoration: none;
    padding: 12px 40px;
  }
  .hero-banner__content {
    max-width: 520px;
    background: #fff;
    padding: 10px 50px;
    padding-bottom: 40px;
  }
  .hero-banner__content h2 {
    font-size: 70px;
    line-height: 70px;
    font-weight: 500;
    margin: 0;
    margin-bottom: 50px;
  }
  .hero-banner__content p {
    margin: 0;
    margin-bottom: 50px;
  }
  .hero-banner__content-button {
    background: #000;
    padding: 12px 40px;
    color: #fff;
    text-decoration: none;
  }
  .hero-banner__footer {
    background: #f5f5f5;
    padding: 10px 50px;
    text-align: center;
  }
  .hero-banner__footer * {
    margin: 0;
  }
  .content-area {
    display: flex;
    height: 86vh;
    flex-direction: column;
  }
  .hero-banner__bg {
    background: url(https://rahman-zeb-651-teststore.myshopify.com/cdn/shop/t/2/assets/banner-bg.svg?v=93124217167391876821728627086)
      no-repeat center bottom;
    background-size: 100%;
    flex: 1.2;
  }
  .hero-banner__bg-wrapper {
    flex: 1;
    background: url(https://rahman-zeb-651-teststore.myshopify.com/cdn/shop/t/2/assets/banner-bg.svg?v=93124217167391876821728627086)
      no-repeat 550px top;
    background-size: 100%;
    display: flex;
    align-items: center;
  }
</style>
